{
  "info": {
    "name": "Headless Shop API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Cart",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{}" },
        "url": {
          "raw": "http://localhost:5000/api/carts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "carts"]
        }
      }
    },
    {
      "name": "Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"productId\": \"<productId>\",\n  \"variantId\": \"<variantId>\",\n  \"quantity\": 2\n}" },
        "url": {
          "raw": "http://localhost:5000/api/carts/<cartId>/items",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "carts", "<cartId>", "items"]
        }
      }
    },
    {
      "name": "Update Item Quantity",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"quantity\": 5\n}" },
        "url": {
          "raw": "http://localhost:5000/api/carts/<cartId>/items/<itemId>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "carts", "<cartId>", "items", "<itemId>"]
        }
      }
    },
    {
      "name": "Remove Item from Cart",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/carts/<cartId>/items/<itemId>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "carts", "<cartId>", "items", "<itemId>"]
        }
      }
    },
    {
      "name": "Apply Promo Code",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"code\": \"<promoCode>\"\n}" },
        "url": {
          "raw": "http://localhost:5000/api/carts/<cartId>/apply-promo",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "carts", "<cartId>", "apply-promo"]
        }
      }
    },
    {
      "name": "Get Cart Totals",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/carts/<cartId>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "carts", "<cartId>"]
        }
      }
    },
    {
      "name": "Checkout (Create Order)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{}" },
        "url": {
          "raw": "http://localhost:5000/api/checkout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "checkout"]
        }
      }
    },
    {
      "name": "List Orders",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/orders",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "orders"]
        }
      }
    }
  ]
}
